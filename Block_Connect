<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Block Connect</title>
    <style>
        body { text-align: center; font-family: Arial, sans-serif; }
        #homeScreen { display: block; padding: 50px; }
        #gameScreen { display: none; }
        #grid { 
            display: grid; 
            grid-template-columns: repeat(6, 50px); 
            grid-gap: 5px; 
            justify-content: center;
        }
        .cell {
            width: 50px; height: 50px; 
            background: lightgray; border: 1px solid #333;
        }
        .block {
            width: 50px; height: 50px; 
            background: blue; cursor: grab;
        }
    </style>
</head>
<body>

    <div id="homeScreen">
        <h1>Block Connect</h1>
        <button onclick="startGame()">Play</button>
    </div>

    <div id="gameScreen">
        <h2>Block Connect</h2>
        <div id="grid"></div>
        <p>Drag the blue blocks into empty spaces!</p>
    </div>

    <script>
        function startGame() {
            document.getElementById("homeScreen").style.display = "none";
            document.getElementById("gameScreen").style.display = "block";
            generateGrid();
        }

        function generateGrid() {
            let grid = document.getElementById("grid");
            grid.innerHTML = "";
            
            for (let i = 0; i < 36; i++) { // 6x6 grid
                let cell = document.createElement("div");
                cell.classList.add("cell");
                grid.appendChild(cell);
            }

            spawnBlocks();
        }

        function spawnBlocks() {
            for (let i = 0; i < 3; i++) { // Add 3 draggable blocks
                let block = document.createElement("div");
                block.classList.add("block");
                block.draggable = true;
                block.addEventListener("dragstart", dragStart);
                document.body.appendChild(block);
                positionBlock(block);
            }
        }

        function positionBlock(block) {
            let x = Math.random() * (window.innerWidth - 60);
            let y = Math.random() * (window.innerHeight - 60);
            block.style.position = "absolute";
            block.style.left = x + "px";
            block.style.top = y + "px";
        }

        function dragStart(event) {
            event.dataTransfer.setData("text/plain", event.target.id);
        }
    </script>

</body>
</html>
